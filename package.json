{
  "name": "8004-solana",
  "version": "0.4.2",
  "description": "TypeScript SDK for ERC-8004 on Solana - Agent identity, reputation and validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:e2e": "jest --testPathPattern=e2e-solana --testPathIgnorePatterns='[]' --verbose",
    "test:e2e:validation": "NODE_OPTIONS='--experimental-vm-modules' SOLANA_PRIVATE_KEY=$(cat ~/.config/solana/id.json) jest --testPathPattern=e2e-validation --testPathIgnorePatterns='[]' --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "format": "prettier --write src",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "keywords": [
    "solana",
    "erc-8004",
    "agent",
    "reputation",
    "identity",
    "blockchain",
    "web3",
    "nft"
  ],
  "author": "QuantuLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuantuLabs/8004-solana-ts.git"
  },
  "homepage": "https://github.com/QuantuLabs/8004-solana-ts",
  "bugs": {
    "url": "https://github.com/QuantuLabs/8004-solana-ts/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@coral-xyz/borsh": "^0.32.1",
    "@solana/web3.js": "^1.95.0",
    "borsh": "^0.7.0",
    "bs58": "^6.0.0",
    "ipfs-http-client": "^60.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "nanoid": "^5.1.6",
    "parse-duration": "^2.1.3"
  }
}
